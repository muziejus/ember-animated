{{yield this.logTransition}}

<h3>Transition Log</h3>
<table class="transition-log-table">
  <thead>
    <tr>
      <th>Inserted</th>
      <th>Kept</th>
      <th>Removed</th>
    </tr>
  </thead>
  <tbody>
    {{#animated-each this.messages as |message|}}
      <tr>
        <td>
          {{array-to-list message.inserted}}
        </td>
        <td>
          {{array-to-list message.kept}}
        </td>
        <td>
          {{array-to-list message.removed}}
        </td>
      </tr>
    {{/animated-each}}
  </tbody>
</table>
